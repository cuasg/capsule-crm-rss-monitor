{
  "manifest_version": 3,
  "name": "Capsule CRM RSS Monitor with OpenAI API Summaries",
  "description": "Tracks Capsule CRM RSS feeds with refresh, notifications, options.",
  "version": "1.5",
  "action": {
    "default_title": "Capsule Extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://msi-products.capsulecrm.com/*",
    "https://api.openai.com/*",
    "https://api.capsulecrm.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "popup.html",
    "open_panel_on_action_click": false
  },
  "web_accessible_resources": [
    {
      "resources": [
        "style.css",
        "ding.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
